{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": { "text": "2022 Unicorn" },
    "width": 1000,
    "data": {
        "url": "data/unicorn.csv"
    },
    "mark": {
        "type": "circle",
        "opacity": 0.5
    },
    "encoding": {
        "x": { 
            "field": "Date Joined", 
            "type": "temporal"
            
        },
        "y": { 
            "field":"Industry", 
            "type":"nominal"
        },
        "color": {
            "field": "Country_top",
            "type": "nominal",
            "scale":{
                "domain":["United States", "China", "European Union", "India"],
                "range":["Blue", "Red", "Yellow", "Green"]
            }
        },
        "size": {
            "field": "Company",
            "aggregate":"count",
            "scale":{
                "domain":[1,1.5,2,2.5,3,3.5,4,4.5],
                "range":[100,200,300,400,500,600,700,800,900]
            }
        }
    }

}