{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": "Total Number of Olympic Bronze Medals of each country",
    "projection": {"type": "equalEarth"},
    "layer":[
        {
            "data": {
              "url": "data/oceans.json",
              "format": {"type": "topojson", "feature": "oceans"}
            },
            "mark": {"type": "geoshape", "fill": "lightblue", "stroke": "white"}
          },
        {
            "data": {
            "url": "data/world_map.json",
            "format": {"type": "topojson", "feature": "countries"}
            },
            "mark": {"type": "geoshape", "fill": "lightgrey", "stroke": "white"}
        },
        {
        "data": {
            "url": "data/world_map.json",
            "format": {
                "type": "topojson",
                "feature": "countries"
            }
        },
        "transform": [
            {
                "lookup": "properties.name",
                "from": {
                    "data": {"url": "data/FIT3179_olympic.csv"},
                    "key": "Country",
                    "fields": ["Bronze", "Country"]
                    }
                }
            ],
            "mark": {"type":"geoshape", "stroke": "white"},
            
            "encoding": {
                "color": {
                    "field": "Bronze",
                    "type": "quantitative",
                    "title": "number of medals",
                    "scale": {"scheme": "purples"} 
                },
                "tooltip":[
                    {"field": "Country","type": "nominal"},
                    {"field": "Bronze","type": "quantitative", "title": "no of bronze medal"}
            ]
            }
        },
        {
            "data": {
              "url": "data/graticules.json",
              "format": {"type": "topojson", "feature": "graticules"}
            },
            "mark": {"type": "geoshape", "fill": null, "stroke": "white"}
          }
        ]

    }