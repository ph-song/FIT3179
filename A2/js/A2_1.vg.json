{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "data/gni_per_capita.csv"},
    "params": [
        {
            "name": "Year_selection",
            "value": 2018,
            "bind": {
              "input": "range",
              "min": 2000,
              "max": 2021,
              "step": 1,
              "name": "Year:  "
            }
        },
        {
            "name": "center_to",
            "value": [0, 0],
            "bind": {
                "input": "select",
                "options": [
                    [0,0], [100, 52],[54.52, 105.25],[8.78, 105.25],
                    [-2.21, -115.66],[38.79, 6.53],[147.1, 37.6],
                    [29.29,-42.5],[-8.78,34.5]
                ],
                "labels": ["Overview", "Europe", "North America", "South America", 
                            "Southeastern Asia", "East Asia", "Central & South Asia",
                            "Middle East", "Africa"],
                "name": "Map Centre: "
            }
        },
        {
            "name": "zoom_level",
            "value": 100,
            "bind": {
                "input": "range",
                "min": 100,
                "max": 1000,
                "step": 10,
                "name": "Zoom: "
            }
        }
    ],
    "vconcat": [
        {
            "width": 900,
            "height": 500,
            "projection": {
            "type": "equalEarth",
            "center": {"expr": "center_to"},
            "scale": {"expr": "zoom_level"}
            
          },
    "layer":[
        {
            "data": {
                "url": "data/oceans.json",
                "format": {
                    "type": "topojson", 
                    "feature":"oceans"}
            },
            
            "mark": {
                "type": "geoshape", 
                "stroke": "grey",
                "fill": "lightblue"
            }
        },
        {
            "transform": [
                {
                    "calculate": "'unavailable data in ' + datum.properties.name",
                    "as": "note"
                }
            ],
            "data": {
                "url": "data/world_map.json",
                "format": {
                    "type": "topojson", 
                    "feature":"countries"}
            },
            "mark": {
                "type": "geoshape", 
                "stroke": "grey",
                "fill": "lightgrey"
            },
            "encoding": {
                "tooltip": {"field": "note"}
            }
        },
        {
            "transform": [
                {
                    "lookup": "Country Name",
                    "from": {
                        "data":{
                            "url": "data/world_map.json",
                            "format":{
                                "type": "topojson",
                                "feature": "countries"
                            }
                        },
                        "key": "properties.name"
                    },
                    "as": "geo"
                },
                {"filter": "year(datum.Year) == Year_selection"}
            ],
            "mark": {
                "type": "geoshape",
                "stroke": "grey"
            },
            "encoding": {
                "shape": {"field": "geo", "type": "geojson"},
                "color":{
                    "field": "GNI Per Capita",
                    "type": "quantitative",
                    "title": "GNI Per Capita",
                    "scale": {"domainMax": 60000}
                },
                "tooltip":[
                    {"field": "Country Name", "type": "nominal", "title": "country"},
                    {"field": "GNI Per Capita", "type": "quantitative", "title": "GNI per capita (USD)", "format": "," },
                    {"field": "Year", "type": "ordinal", "title": "year"}
                ]
            }
        },
        {
            "data": {
                "url": "data/graticules.json",
                "format": {
                    "type": "topojson", 
                    "feature":"graticules"}
            },
            "mark": {
                "type": "geoshape", 
                "stroke": "white",
                "fill": null
            }
        }
    ]
    }
    ],
    "config": {"font": "sans-serif"}
}