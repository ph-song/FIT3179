{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "data": {"url": "data/gni_per_capita.csv"},
    "params": [
      {
        "name": "Year_selection",
        "value": 2018,
        "bind": {
          "input": "range",
          "min": 2000,
          "max": 2021,
          "step": 1,
          "name": "Year:  "
        }
      }
    ],
    "width": 750,
    "height": 400,
    "projection": {"type": "equalEarth"},
    "layer": [
      {
        "data": {
          "url": "data/oceans.json",
          "format": {"type": "topojson", "feature": "oceans"}
        },
        "mark": {"type": "geoshape", "stroke": "grey", "fill": "#ededed"}
      },
      {
        "transform": [
          {
            "calculate": "'unavailable data in ' + datum.properties.name",
            "as": "note"
          }
        ],
        "data": {
          "url": "data/world_map.json",
          "format": {"type": "topojson", "feature": "countries"}
        },
        "mark": {"type": "geoshape", "stroke": "grey", "fill": "lightgrey"},
        "encoding": {"tooltip": {"field": "note"}}
      },
      {
        "transform": [
          {
            "lookup": "Country Name",
            "from": {
              "data": {
                "url": "data/world_map.json",
                "format": {"type": "topojson", "feature": "countries"}
              },
              "key": "properties.name"
            },
            "as": "geo"
          },
          {"filter": "year(datum.Year) == Year_selection"}
        ],
        "mark": {"type": "geoshape", "stroke": "grey"},
        "encoding": {
          "shape": {"field": "geo", "type": "geojson"},
          "color": {
            "field": "GNI Per Capita",
            "type": "quantitative",
            "title": "GNI per capita",
            "scale": {"domainMax": 60000, "scheme": "plasma", "reverse": true}
          },
          "tooltip": [
            {"field": "Country Name", "type": "nominal", "title": "Country"},
            {
              "field": "GNI Per Capita",
              "type": "quantitative",
              "title": "GNI per capita (USD)",
              "format": ","
            },
            {"field": "Year", "type": "ordinal", "title": "Year"}
          ]
        }
      },
      {
        "data": {
          "url": "data/graticules.json",
          "format": {"type": "topojson", "feature": "graticules"}
        },
        "mark": {"type": "geoshape", "stroke": "white", "fill": null}
      }
    ]
  }